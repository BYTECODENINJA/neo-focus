  "features": [
    {
      "name": "Focus Timer (Pomodoro)",
      "description": "Customizable work and break sessions with visual progress indicators, audio notifications, and session persistence",
      "files": [
        "components/focus-mode.tsx",
        "contexts/timer-context.tsx"
      ],
      "api_doc": {
        "paths": {
          "/": {
            "get": {
              "summary": "Display focus timer interface",
              "responses": {
                "200": {
                  "description": "Focus timer page loaded"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Calendar & Events",
      "description": "Event management with categories, recurring events, and color-coded organization",
      "files": [
        "components/calendar.tsx",
        "components/daily-schedule.tsx"
      ],
      "api_doc": {
        "paths": {
          "/api/calendar-events": {
            "get": {
              "summary": "Get all calendar events",
              "responses": {
                "200": {
                  "description": "List of calendar events"
                }
              }
            },
            "post": {
              "summary": "Create a new calendar event",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "title": {"type": "string"},
                        "date": {"type": "string"},
                        "time": {"type": "string"},
                        "category": {"type": "string"}
                      }
                    }
                  }
                }
              },
              "responses": {
                "201": {
                  "description": "Event created successfully"
                }
              }
            }
          }
        }
      }
    },
